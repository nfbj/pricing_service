<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.3//EN"
        "http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">
<import-control pkg="com">

    <allow pkg=".*" regex="true"/>

    <subpackage name="successfactors">
        <!-- Logging: disallow import of log4j2, JCL, JUL packages. SLF4J should be used instead -->
        <disallow pkg="java.util.logging"/>                 <!-- JUL    -->
        <disallow pkg="org.apache.log4j"/>                  <!-- Log4j  -->
        <disallow pkg="org.apache.logging.log4j"/>          <!-- Log4j2 -->
        <disallow pkg="org.apache.commons.logging"/>        <!-- JCL    -->
    </subpackage>

</import-control>